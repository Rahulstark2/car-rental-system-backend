generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int       @id @default(autoincrement())
  username   String    @unique
  password   String
  created_at DateTime  @default(now())
  bookings   Booking[]
}

model Booking {
  id         Int           @id @default(autoincrement())
  user_id    Int
  car_name   String
  days       Int
  rentPerDay Int
  status     BookingStatus
  created_at DateTime      @default(now())
  user       User          @relation(fields: [user_id], references: [id])
}

enum BookingStatus {
  booked
  completed
  cancelled
}
